{
  "name": "api",
  "projectType": "application",
  "sourceRoot": "apps/api",
  "targets": {
    "migrate:up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "migrate -path migrations -database \"$DATABASE_URL\" up",
        "cwd": "apps/api",
        "envFile": "apps/api/.env"
      }
    },
    "migrate:down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "migrate -path migrations -database \"$DATABASE_URL\" down 1",
        "cwd": "apps/api",
        "envFile": "apps/api/.env"
      }
    },
    "migrate:create": {
      "executor": "nx:run-commands",
      "options": {
        "command": "migrate create -ext sql -dir migrations -format 20060102150405 {args.name}",
        "cwd": "apps/api"
      }
    }
  }
}
