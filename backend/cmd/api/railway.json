{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "environment": [
      {
        "variable": "DOCS_PATH",
        "value": "apps/api/docs"
      },
      {
        "variable": "MIGRATIONS_PATH",
        "value": "apps/api/migrations"
      },
      {
        "variable": "SKIP_MIGRATIONS",
        "value": "false"
      }
    ]
  }
}
